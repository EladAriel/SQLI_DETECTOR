# ===========================================
# SQL INJECTION DETECTION SYSTEM - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database URL for the application
DATABASE_URL="postgresql://postgres:secure_db_password_123@localhost:5432/sqli_detection?schema=public"

# Database credentials for Docker Compose
POSTGRES_DB=sqli_detection
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_db_password_123

# ===========================================
# API KEYS & EXTERNAL SERVICES
# ===========================================
# OpenAI API Key for RAG and AI-powered analysis
OPENAI_API_KEY=your_openai_api_key_here

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_for_security

# ===========================================
# LOGGING & MONITORING CONFIGURATION
# ===========================================
# Logging levels (comma-separated): error,warn,log,debug,verbose
LOG_LEVEL=log,error,warn

# Application log file path (optional)
LOG_FILE_PATH=./logs/application.log

# Enable/disable request logging
ENABLE_REQUEST_LOGGING=true

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Node environment (development, production, test)
NODE_ENV=development

# Application ports
API_PORT=3001
RAG_PORT=3002
MCP_PORT=6275

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Grafana admin password
GRAFANA_ADMIN_PASSWORD=secure_grafana_admin_password

# N8N workflow automation password
N8N_ADMIN_PASSWORD=secure_n8n_admin_password

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# VECTOR STORE & AI CONFIGURATION
# ===========================================
# Vector database configuration
VECTOR_STORE_TYPE=postgresql
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=1536

# LLM Configuration
LLM_MODEL=gpt-4.1
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=2048

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size in bytes (10MB)
MAX_FILE_SIZE=10485760

# Allowed file types for upload
ALLOWED_FILE_TYPES=js,ts,sql,py,java,cpp,c,php,rb,go,rs,txt,md

# Upload directory
UPLOAD_PATH=./uploads

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# DOCKER & DEPLOYMENT
# ===========================================
# Docker registry for custom images
DOCKER_REGISTRY=your-registry.com

# Application version
APP_VERSION=1.0.0

# Environment identifier
ENVIRONMENT_ID=local-development
